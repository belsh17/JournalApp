<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom part (first layer) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />  <!-- Change to your background color -->
        </shape>
    </item>

    <!-- Top part (diagonal layer) -->
    <item android:right="-250dp" android:left="0dp" android:top="400dp" android:bottom="-30dp">
        <rotate android:fromDegrees="-40">  <!-- Adjust angle for steeper or softer diagonal -->
            <shape android:shape="rectangle">
                <solid android:color="@color/light_blue" />  <!-- Color of diagonal part -->
            </shape>
        </rotate>
    </item>

</layer-list>
